<Page
    x:Class="Security.Protect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Security"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <TextBlock Text="Protection" Margin="25,25,0,0" FontSize="30"/>
        <StackPanel Margin="25,30,0,0">
            <TextBlock HorizontalAlignment="Left" Margin="0,0,0,0" Text="Viruses" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="25"/>
            <TextBlock x:ConnectionId='2' x:Name="txtBlockD" Text="Seems all good" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Margin="0,15,0,0"/>
            <Button x:ConnectionId='3' x:Name="CheckButton" Content="Check now" FontSize="18" ToolTipService.ToolTip="Right now this app dont check your PC on viruses. Wait for next updates!"                           Height="40" Width="122" Style="{ThemeResource ButtonRevealStyle}" Margin="0,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ProgressBar x:ConnectionId='4' x:Name="progresB" Visibility="Collapsed" IsIndeterminate="True" Height="9" Width="300" Margin="0,-40,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
        </StackPanel>
    </StackPanel>
</Page>

