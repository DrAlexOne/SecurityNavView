<Page
    x:Class="Security.Protect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Security"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:ConnectionId='2' x:Name="txtBlockD" HorizontalAlignment="Left" Margin="58,100,0,0" Text="Seems all good" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"                                             />
        <Button x:ConnectionId='3' x:Name="CheckButton" Content="Check now" HorizontalAlignment="Left" Margin="58,150,0,0" VerticalAlignment="Top" FontSize="18" ToolTipService.ToolTip="Right now this app dont check your PC on viruses. Wait for next updates!"                           Height="40" Width="130" Style="{ThemeResource ButtonRevealStyle}"/>
        <TextBlock HorizontalAlignment="Left" Margin="58,55,0,0" Text="Viruses" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30"/>
        <ProgressBar x:ConnectionId='4' x:Name="progresB" Visibility="Collapsed" IsIndeterminate="True" Height="9" Width="400" Margin="58,277,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
    </Grid>
</Page>

